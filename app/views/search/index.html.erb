<h1>Search</h1>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query, :value => @query %>
  <%= form.submit "Search" %>
<% end %>

<h2 class="mt-3">Results</h2>

<% if @devices.present? %>
  <ul>
    <% @devices.each do |d| %>
      <li><%= d.name %></li>
    <% end %>
  </ul>
<% end %>
