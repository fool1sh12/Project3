<h1>Search</h1>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query, :value => @query %>
  
  <%= form.label :query, "Category:" %>
  <%= form.select :category_id, Category.all.map { |c| [c.name, c.id] }, :selected => @category_id, :include_blank => true  %>
  
  <%= form.submit "Search" %>
<% end %>

<% if @query.present? %>
  
  <h2 class="mt-3">Results</h2>

  <% if @devices.present? %>
    <ul>
      <% @devices.each do |d| %>
        <li><%= d.name %></li>
      <% end %>
    </ul>
  <% end %>

<% else %>
  <p class="mt-3">Ready to search!</p>
<% end %>
